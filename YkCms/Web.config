<?xml version="1.0"?>
<configuration>

	<appSettings>
		<add key="ConnString" value="server=localhost;uid=sa;pwd=123;database=YkCms"/>
		<add key="ConStringEncrypt" value="false"/>
		<add key="DAL" value="YK.DAL" />
    <add key="ModelCache" value="60"/><!--BLL缓存时间-->
	</appSettings>
    <connectionStrings />
  <system.web>
    <compilation debug="true">
    </compilation>
    <!--
            通过 <authentication> 节可以配置
            安全身份验证模式，ASP.NET 
            使用该模式来识别来访用户身份。 
        -->
    <authentication mode="Forms">
      <forms name="YK.APSXAUTH" protection="All" timeout="60" loginUrl="Admin/Login.aspx" path="/"></forms>
    </authentication>
    <authorization>
      <allow users="*"/>
    </authorization>
    <!--
            如果在执行请求的过程中出现未处理的错误，
            则通过 <customErrors> 节
            可以配置相应的处理步骤。具体而言，
            开发人员通过该节可配置要显示的 html 错误页，
            以代替错误堆栈跟踪。
        <customErrors mode="RemoteOnly" defaultRedirect="GenericErrorPage.htm">
            <error statusCode="403" redirect="NoAccess.htm" />
            <error statusCode="404" redirect="FileNotFound.htm" />
        </customErrors>
        -->
  </system.web>
  <!--设置根目录下的Admin目录拒绝匿名登陆-->
  <location path="Admin">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <system.web>
    <pages>
      <controls>
        <add tagPrefix="CKEditor" assembly="CKEditor.NET" namespace="CKEditor.NET"/>
      </controls>
    </pages>
  </system.web>  
</configuration>